<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.example.parcialunomoviles.Viewer">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Equipo 1"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:id="@+id/viewer_equipo1"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Puntuacion"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:id="@+id/viewer_equipo1_puntuacion"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Equipo 2"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:id="@+id/viewer_equipo2"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Puntuacion"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:id="@+id/viewer_equipo2_puntuacion"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Ganador "
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:layout_margin="10dp"
                  android:id="@+id/viewer_ganador"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Hora "
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:layout_margin="10dp"
                  android:id="@+id/viewer_hora"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Fecha "
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:layout_margin="10dp"
                  android:id="@+id/viewer_fecha"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
