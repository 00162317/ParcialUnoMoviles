<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_height="match_parent"
        android:background="@drawable/negrito"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent">
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/negri"
        android:layout_height="match_parent"
        tools:context="com.example.parcialunomoviles.Viewer">
    <TextView android:layout_width="wrap_content"
              android:text="Resultados Finales"
              android:textSize="30dp"
              android:layout_gravity="center"
              android:textColor="#D0482F"
              android:fontFamily="sans-serif-black"
              android:layout_height="wrap_content"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Equipo 1"
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:id="@+id/viewer_equipo1"
                  android:layout_margin="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Puntuacion"
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:id="@+id/viewer_equipo1_puntuacion"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Equipo 2"
                  android:textSize="20dp"
                  android:layout_margin="8dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:id="@+id/viewer_equipo2"
                  android:layout_margin="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Puntuacion"
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:id="@+id/viewer_equipo2_puntuacion"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Ganador "
                  android:textColor="#D0482F"
                  android:textSize="20dp"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textColor="#D0482F"
                  android:textSize="20dp"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="10dp"
                  android:id="@+id/viewer_ganador"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Hora "
                  android:layout_margin="10dp"
                  android:textColor="#D0482F"
                  android:textSize="20dp"
                  android:fontFamily="sans-serif-black"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="10dp"
                  android:id="@+id/viewer_hora"
                  android:textSize="20dp"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="20dp"
                  android:gravity="center"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="Fecha "
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="10dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="N/A"
                  android:textSize="20dp"
                  android:textColor="#D0482F"
                  android:fontFamily="sans-serif-black"
                  android:layout_margin="10dp"
                  android:id="@+id/viewer_fecha"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>